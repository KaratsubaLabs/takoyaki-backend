
upstream takoyaki-backend {
    server takoyaki-app:8080;
}

upstream takoyaki-frontend {
    server localhost:3000;
}

server {

    listen 80;

    location /api {
        rewrite /api/(.*) /$1 break;
        proxy_pass http://takoyaki-backend;
        proxy_redirect     off;
        proxy_set_header   Host $host;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Host $server_name;
    }
}

server {

    listen 80;

    location /app {
        rewrite /app/(.*) /$1 break;
        proxy_pass http://takoyaki-frontend;
        proxy_redirect     off;
        proxy_set_header   Host $host;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Host $server_name;
    }
}
